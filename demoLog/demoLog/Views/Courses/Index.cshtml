            <h4>
                @Html.DisplayNameFor(model => model.Students):
            </h4>
            <p>
                @Html.DisplayFor(modelItem => item.Students)
            </p>
            <h4>
                @Html.DisplayNameFor(model => model.Instructor):
            </h4>
            <p>
                @Html.DisplayFor(modelItem => item.Instructor)
            </p>
        </div>
    }
</div>
